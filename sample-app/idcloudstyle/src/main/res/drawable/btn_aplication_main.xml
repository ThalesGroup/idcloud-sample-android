<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Pressed-->
    <item android:state_pressed="true">
        <layer-list>
            <!--Foreground-->
            <item android:top="2.5dp" android:left="2.5dp">
                <shape>
                    <corners android:radius="@dimen/dimensionButtonBackgroundCornerRadius" />

                    <padding android:bottom="@dimen/dimensionButtonBackgroundPadding"
                        android:left="@dimen/dimensionButtonBackgroundPadding"
                        android:right="@dimen/dimensionButtonBackgroundPadding"
                        android:top="@dimen/dimensionButtonBackgroundPadding" />
                    <solid android:color="@color/colorButtonBackground" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!--Normal-->
    <item android:state_enabled="true">
        <layer-list>
            <!--Shadow-->
            <item android:left="3dp" android:top="3dp">
                <shape>
                    <corners android:radius="@dimen/dimensionButtonBackgroundCornerRadius" />

                    <padding android:bottom="@dimen/dimensionButtonBackgroundPadding"
                        android:left="@dimen/dimensionButtonBackgroundPadding"
                        android:right="@dimen/dimensionButtonBackgroundPadding"
                        android:top="@dimen/dimensionButtonBackgroundPadding" />
                    <solid android:color="#868686" />
                </shape>
            </item>
            <!--Foreground-->
            <item android:bottom="0.5dp" android:right="0.5dp">
                <shape>
                    <corners android:radius="@dimen/dimensionButtonBackgroundCornerRadius" />

                    <padding android:bottom="@dimen/dimensionButtonBackgroundPadding"
                        android:left="@dimen/dimensionButtonBackgroundPadding"
                        android:right="@dimen/dimensionButtonBackgroundPadding"
                        android:top="@dimen/dimensionButtonBackgroundPadding" />
                    <solid android:color="@color/colorButtonBackground" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!--Disabled-->
    <item android:state_enabled="false">
        <layer-list>
            <!--Foreground-->
            <item android:top="2.5dp" android:left="2.5dp">
                <shape>
                    <corners android:radius="@dimen/dimensionButtonBackgroundCornerRadius" />

                    <padding android:bottom="@dimen/dimensionButtonBackgroundPadding"
                        android:left="@dimen/dimensionButtonBackgroundPadding"
                        android:right="@dimen/dimensionButtonBackgroundPadding"
                        android:top="@dimen/dimensionButtonBackgroundPadding" />
                    <solid android:color="@color/colorButtonBackgroundDisabled" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>